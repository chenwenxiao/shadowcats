extend layout

block content
  main.benefits.container
    .section
      .container
        .row
          h1 &#20010;&#20154;&#26723;&#26696;
    .section
      .container
        .row
          .col-md-8
            form.form-horizontal(role="form", action="/usrs", method="POST")
              .col-md-12
                .form-group
                  .col-sm-4
                    label.control-label(for="inputEmail3") &#29992;&#25143;&#21517;
                  .col-sm-8
                    label.form-control #{info.name}
                .form-group
                  .col-sm-4
                    label.control-label(for="inputEmail3") &#37038;&#31665;
                  .col-sm-8
                    label.form-control #{info.email}
                .form-group
                  .col-sm-4
                    label.control-label(for="inputPassword3") &#26165;&#31216;
                  .col-sm-8
                    input.form-control(type="text" name="nickname" value=info.nickname)
                .form-group
                  .col-sm-4
                    label.control-label(for="inputPassword3") &#24180;&#40836;
                  .col-sm-8
                    input.form-control(type="text" name="age" value=info.age)
                .form-group
                  .col-sm-4
                    label.control-label(for="inputPassword3") &#24615;&#21035;
                  .col-sm-8
                    select#inputPassword3.form-control(name = "sex")
                      option(value="男") &#30007;
                      option(value="女") &#22899;
                .form-group
                  .col-sm-4
                    label.control-label(for="inputPassword3") &#21333;&#20301;
                  .col-sm-8
                    input#inputPassword3.form-control(type="text" name="workPlace" value=info.workPlace)
                .form-group
                  .col-sm-4
                    label.control-label(for="inputPassword3") &#22791;&#27880;
                  .col-sm-8
                    textarea#inputPassword3.form-control(type="text" name="notice") #{info.notice}
                .form-group
                  .col-sm-offset-2.col-sm-10
                    button.button.button-rounded.button-plain.button-small-caps.button-border(type="submit")
                      i.fa.fa-download
                      | 上传信息
          .col-md-4
            .row
              img(src="#{avater}", style="width: 150px; height: 150px")
            .row
              form(method='post', action='/usrs/avater', enctype='multipart/form-data')
                a.button.button-rounded.button-plain.button-small-caps.button-border(href="#")
                  i.fa.fa-download
                  | 选择头像
                input(name='inputFile', type='file', multiple='mutiple' style="opacity:0; position: absolute; top: 150px; height: 40px; width: 160px;")
                button.button.button-rounded.button-plain.button-small-caps.button-border(type="submit")
                  i.fa.fa-download
                  | 上传头像
