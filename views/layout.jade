  body
    #login.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      //.background-image(style="background-image : url('..\public\images\background.png')")
      .container
        .row.text-center
          h2
            |Log in to ShadowCats
            br
          img.logo(src='/images/favicon.ico', alt='shadowcats')
          br
          br
          .col-md-8.col-md-offset-3
            form.form-horizontal(role='form')
              .form-group
                .col-sm-2
                  label.control-label(for='inputEmail3') Email
                .col-sm-6
                  input#inputEmail3.form-control(type='email', placeholder='Email')
              .form-group
                .col-sm-2
                  label.control-label(for='inputPassword3') Password
                .col-sm-6
                  input#inputPassword3.form-control(type='password', placeholder='Password')
              .form-group
                .col-sm-offset-2.col-sm-6
                  button.btn.btn-block.btn-info(type='submit', name='commandLogin', value='1') Log in

    #signup.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      //.background-image(style="background-image : url('..\public\images\background.png')")
      .container
        .row
          .col-md-8.col-md-offset-2
            .row.text-center
              h2 Signup Your ShadowCats Account!
              br
              img.logo(src='/images/favicon.ico', alt='shadowcats', style='text-align:center;')
              br
              br
            form.form-horizontal(action='/signup', method='POST', autocomplete='off')
              .form-group
                .col-sm-2.col-sm-offset-1
                  label.control-label(for='name') UserName
                .col-sm-6
                  input.form-control(type='text', name='name', placeholder='UserName')
              .form-group
                .col-sm-2.col-sm-offset-1
                  label.control-label(for='email') Email
                .col-sm-6
                  input#inputEmail3.form-control(type='email', name='email', placeholder='Your email')
              .form-group
                .col-sm-2.col-sm-offset-1
                  label.control-label(for='password') Password
                .col-sm-6
                  input#inputPassword3.form-control(type='password', name='password', placeholder='Create a password')
              .form-group
                .col-sm-offset-3.col-sm-6
                  button.btn.btn-block.btn-info(type='submit') Create Account!

    nav.navbar.navbar-inverse.navbar-fixed-top.site-navbar
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='./') ShadowCats
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') 首页
            li
              a(href='#',rel='nofollow', data-toggle='modal', data-target='#signup') 注册
            li
              a(href='#', rel='nofollow', data-toggle='modal', data-target='#login') 登陆
            li
              a(href='bigmap') 大地图
            li
              a(href='faq') 常见问题
            li
              a(href='recipes') 使用技巧
        // /.nav-collapse
    // Jumbotron
    script(src='javascripts/modernizr.custom.js')
    script(src='javascripts/classie.js')
    script(src='javascripts/uiMorphingButton_fixed.js')
    script(src='javascripts/uiMorphingButton.js')
    
    block content